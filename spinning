from controller import Robot

TIME_STEP = 32
robot = Robot()

# Get wheel motors
wheel1 = robot.getDevice("wheel1")  # right rear
wheel2 = robot.getDevice("wheel2")  # left rear
wheel3 = robot.getDevice("wheel3")  # left front
wheel4 = robot.getDevice("wheel4")  # right front

# Set motors to velocity control
for motor in [wheel1, wheel2, wheel3, wheel4]:
    motor.setPosition(float('inf'))

# Spin speed
SPEED = 3.0

while robot.step(TIME_STEP) != -1:
    # Left wheels forward
    wheel2.setVelocity(SPEED)
    wheel3.setVelocity(SPEED)

    # Right wheels backward
    wheel1.setVelocity(-SPEED)
    wheel4.setVelocity(-SPEED)
